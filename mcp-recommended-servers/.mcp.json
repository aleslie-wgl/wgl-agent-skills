{
  "mcpServers": {
    "context7": {
      "command": "cmd",
      "args": ["/c", "npx", "-y", "@upstash/context7-mcp@latest"]
    },
    "perplexity": {
      "command": "cmd",
      "args": ["/c", "npx", "-y", "server-perplexity-ask"],
      "env": {
        "PERPLEXITY_API_KEY": "${PERPLEXITY_API_KEY}"
      }
    },
    "playwright": {
      "command": "node",
      "args": [
        "${CLAUDE_PLUGIN_ROOT}/../../node_modules/@playwright/mcp/cli.js",
        "--headless"
      ]
    },
    "convex": {
      "command": "cmd",
      "args": ["/c", "npx", "-y", "convex@latest", "mcp", "start"],
      "cwd": "${PROJECT_ROOT}"
    }
  }
}
